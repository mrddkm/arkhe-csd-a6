<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Documents directory for PDFs -->
    <external-files-path
        name="pdf_files"
        path="Documents/PDFs/" />

    <!-- Pictures directory for Images -->
    <external-files-path
        name="image_files"
        path="Pictures/Images/" />

    <!-- All external files -->
    <external-files-path
        name="external_files"
        path="." />

    <!-- External storage root -->
    <external-path
        name="external"
        path="." />

    <!-- Internal files directory -->
    <files-path
        name="files"
        path="." />

    <!-- Cache directory -->
    <cache-path
        name="cache"
        path="." />

    <!-- External cache directory -->
    <external-cache-path
        name="external_cache"
        path="." />
</paths>